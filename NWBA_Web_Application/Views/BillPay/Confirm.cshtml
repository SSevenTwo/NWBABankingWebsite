@model NWBA_Web_Application.Models.BillPayFormModel
@{
    ViewData["Title"] = "Confirm";
}

<h1>Confirm</h1>
<p><strong>Please confirm the following is correct:</strong></p>
<p><strong>From account:</strong> @Model.SenderAccountNumber</p>
<p><strong>To Payee:</strong> @Model.DestinationID</p>
<p><strong>Amount:</strong> @Model.Amount</p>
<p><strong>Date:</strong> @Model.Date</p>
<p>
    <strong>Period:</strong>
    @{ switch (Model.Period.ToLower())
        {
            case "s":
                @Html.Encode("Once off")
                break;
            case "m":
                @Html.Encode("Monthly")
                break;
            case "q":
                @Html.Encode("Quaterly")
                break;
            case "a":
                @Html.Encode("Anually")
                break;
        }
    }
</p>
    <form asp-action="Confirm" method="post">


        <div class="form-group">
            <input type="hidden" asp-for="@Model.SenderAccountNumber" value="@Model.SenderAccountNumber" />
            <input type="hidden" asp-for="@Model.DestinationID" value="@Model.DestinationID" />
            <input type="hidden" asp-for="@Model.Amount" value="@Model.Amount" />
            <input type="hidden" asp-for="@Model.Date" value="@Model.Date" />
            <input type="hidden" asp-for="@Model.Period" value="@Model.Period" />
            <input type="submit" value="Confirm" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="Index">Back to Scheduled Payments</a>
    </div>
